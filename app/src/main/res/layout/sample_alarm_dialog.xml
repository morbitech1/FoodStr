<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.example.s164403.foodstr"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@drawable/rounded_corners"
            android:clickable="true"
            android:contextClickable="false">

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:paddingRight="10dp"
                android:text="12:03"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@android:color/white"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/recipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/time"
                android:layout_alignBottom="@+id/time"
                android:layout_toEndOf="@+id/time"
                android:text="Mad"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="24sp"/>

            <Button
                android:id="@+id/dismiss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:text="Ok"/>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/time"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/starting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="Starting:\n\t- dsa\n\t- dsa\n\t- dsadawdda\n\t- dsa\n\t- dsa"/>

                <TextView
                    android:id="@+id/ending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="10"
                    android:layout_row="0"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="Ending:\n\t- dsa\n\t- dsa\n\t- dsadawdda\n\t- dsa\n\t- dsa"/>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</FrameLayout>
